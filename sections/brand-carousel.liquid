<div class="featured-product">
  <div class="featured-product__image">
    <img src="{{ section.settings.product_image | img_url: '400x400' }}" alt="{{ featured_product.title }}" />
  </div>
  <div class="featured-product__info">
    <h2 class="featured-product__title">{{ featured_product.title }}</h2>
    <p class="featured-product__price">{{ featured_product.price | money }}</p>
    {% if section.settings.display_description %}
      <p class="featured-product__description">{{ featured_product.description }}</p>
    {% endif %}
  </div>
</div>

{
  "name": "Featured Product",
  "class": "featured-product",
  "max_blocks": 1,
  "blocks": [
    {
      "type": "product",
      "name": "Featured Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select a Product",
          "info": "Choose the product you want to feature on your homepage.",
          "required": true
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image",
          "info": "Select an image to represent the featured product (400x400 pixels recommended)."
        },
        {
          "type": "checkbox",
          "id": "display_description",
          "label": "Display Product Description",
          "default": false,
          "info": "Check to display the product description below the product details."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}