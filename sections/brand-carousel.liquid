{{ 'brand-carousel.css' | asset_url | stylesheet_tag }}

<div class="brand-carousel">
  <div class="brand-carousel-container">
    <div class="brand-carousel-track">
      {% for block in section.blocks %}
        <div class="brand-carousel-item">
          <img src="{{ block.settings.logo | img_url: '50x50' }}" alt="{{ block.settings.alt_text }}" />
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}

{
  "name": "Brand Carousel",
  "class": "brand-carousel",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image",
          "id": "logo",
          "label": "Brand Logo",
          "info": "Upload your brand logo. It will be resized to 50px x 50px.",
          "required": true
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "info": "Provide alternative text for the logo (for accessibility)."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "auto_scroll",
      "label": "Auto Scroll",
      "default": true,
      "info": "Enable auto-scrolling of brand logos in the carousel."
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3,
      "info": "Set the scroll speed (higher value means faster scrolling)."
    }
  ]
}

{% endschema %}