<h1>{{ section.settings.text }}</h1>
<h2 style="{{ section.settings.font_size }}">{{ section.settings.richtext }}</h2>

{% if section.settings.show_announcement %}
  <h3 >{{ "The Checkbox is turned on" }}</h3>
{% endif %}


{% schema %}
  {
    "name": "Jays Custom Section",
    "settings": [
      {
        "type":"text",
        "id": "text",
        "label": "Text Input"
      },
      {
        "type":"richtext",
        "id": "richtext",
        "label": "Rich Text Input"
      },
      {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Show This Announcement",
        "default": true
      },
      {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    }
    ],
    "presets": [{"name": "Default custom section"}],
    "tag": "header",
    "class": "custom-section",
    "limit": 1
  }



  
{% endschema %}

