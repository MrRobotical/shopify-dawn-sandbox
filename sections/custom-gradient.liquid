
{% comment %}
<div class="gradient-heading-section">
    <h1 style="background: linear-gradient(to right, {{ section.settings.gradient_color_start }}, {{ section.settings.gradient_color_end }}); 
               -webkit-background-clip: text; 
               background-clip: text; 
               color: transparent; 
               font-family: '{{ section.settings.gradient_font.family }}';
               font-size: {{ section.settings.font_size }}px;
               text-align: {{ section.settings.text_alignment }};">
      {{ section.settings.heading_text }}
    </h1>
  </div>
{% endcomment %}

<div class="gradient-header" style="background: linear-gradient(to right, {{ section.settings.background_color }});">
  <h1 style="color: {{ section.settings.title_color }}; font-family: {{ section.settings.font_family }}; font-size: {{ section.settings.font_size }}px;">{{ section.settings.title }}</h1>
</div>





  {% schema %}
{
  "name": "Gradient Header",
  "settings": [
    {
      "type": "color",
      "label": "Title Color",
      "id": "title_color"
    },
    {
      "type": "color",
      "label": "Background Color",
      "id": "background_color"
    },
    {
      "type": "font_picker",
      "label": "Font Family",
      "id": "font_family",
      "default":  "helvetica_n4"
    },
    {
      "type": "range",
      "label": "Font Size (px)",
      "id": "font_size",
      "min": 10,
      "max": 72,
      "step": 2,
      "unit": "px",
      "default": 16
    }
  ],

    "presets":[
       {
          "name":"Gradient",
          "category":"Custom"
       }
    ]
  }
{% endschema %}

