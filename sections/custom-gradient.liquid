{% assign gradient_font = section.settings.font_family %}

<style>
{{ gradient_font | font_face }}, 

  div {
    font-family:{{ gradient_font | font_face }}
  }
</style>
  
  <div style="background-image: linear-gradient(to right, {{ section.settings.start_color }}, {{ section.settings.end_color }}); -webkit-background-clip: text; color: transparent; font-family: {{ section.settings.font_family }}; font-size: {{ section.settings.font_size }}px;text-align: {{ section.settings.title_alignment }};">
    {{ section.settings.header_title }}
  </div>

  {% schema %}
{
  "name": "Gradient Header",
  "settings": [
    {
      "type": "text",
      "label": "Header Title",
      "id": "header_title",
      "default": "Your Title Here"
    },
    {
  "type": "select",
  "label": "Title Alignment",
  "id": "title_alignment",
  "options": [
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "right",
      "label": "Right"
    }
  ],
  "default": "center"
},
    {
      "type": "color",
      "label": "Start Color",
      "id": "start_color"
    },
    {
      "type": "color",
      "label": "End Color",
      "id": "end_color"
    },
    {
      "type": "font_picker",
      "label": "Font Family",
      "id": "font_family",
      "default": "sans-serif"
    },
    {
      "type": "range",
      "label": "Font Size (px)",
      "id": "font_size",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Custom Gradient Header",
      "category": "Custom"
    }
  ]
}

{% endschema %}

