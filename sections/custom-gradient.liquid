
{% comment %}
<div class="gradient-heading-section">
    <h1 style="background: linear-gradient(to right, {{ section.settings.gradient_color_start }}, {{ section.settings.gradient_color_end }}); 
               -webkit-background-clip: text; 
               background-clip: text; 
               color: transparent; 
               font-family: '{{ section.settings.gradient_font.family }}';
               font-size: {{ section.settings.font_size }}px;
               text-align: {{ section.settings.text_alignment }};">
      {{ section.settings.heading_text }}
    </h1>
  </div>
{% endcomment %}

<div class="gradient-header">
  <h1 style="background-image: linear-gradient(to right, {{ section.settings.start_color }}, {{ section.settings.end_color }}); -webkit-background-clip: text; color: transparent; font-family: {{ section.settings.font_family | font_face }}; font-size: {{ section.settings.font_size }}px;text-align: {{ section.settings.title_alignment }};">
    {{ section.settings.header_title }}
  </h1>
</div>




  {% schema %}
{
  "name": "Gradient Header",
  "settings": [
    {
      "type": "text",
      "label": "Header Title",
      "id": "header_title",
      "default": "Your Title Here"
    },
    {
  "type": "select",
  "label": "Title Alignment",
  "id": "title_alignment",
  "options": [
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "right",
      "label": "Right"
    }
  ],
  "default": "center"
},
    {
      "type": "color",
      "label": "Start Color",
      "id": "start_color"
    },
    {
      "type": "color",
      "label": "End Color",
      "id": "end_color"
    },
    {
      "type": "font_picker",
      "label": "Font Family",
      "id": "font_family",
      "default": "sans-serif"
    },
    {
      "type": "range",
      "label": "Font Size (px)",
      "id": "font_size",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Custom Gradient Header",
      "category": "Custom"
    }
  ]
}

{% endschema %}

