<!-- product-slider.liquid -->

<div class="product-slider">
    <h2>{{ section.settings.title }}</h2>
    <div class="product-slider-container">
      {% for product in section.blocks.products.selected_products %}
        <div class="product-slide">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: '500x500' }}" alt="{{ product.title }}" />
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
  
  {% schema %}
  {
    "name":"Custom Product Slider",
    "class":"product-slider",
    "settings":[
       {
          "type":"text",
          "label":"Title",
          "id":"title",
          "default":"Featured Products"
       }
    ],
    "blocks":[
       {
          "type":"product",
          "name":"Products",
          "settings":[
             {
                "type":"product_picker",
                "label":"Select Products",
                "id":"product_picker",
                "info":"Select the products to display"
             }
          ]
       }
    ],
    "presets":[
       {
          "name":"Custom Product Slider",
          "category":"Custom"
       }
    ]
 }
  {% endschema %}
  