  "name": "Product Slider 2",
  "max_blocks": 10,
  "class": "product-slider-section",
  "settings": [
    {
      "type": "product",
      "label": "Select Products",
      "id": "products",
      "info": "Select the products you want to display in the slider.",
      "required": true,
      "max_items": 10
    }
  ],
