{% assign customTags = section.settings.tag-name | split: '\n' %}

{% for string in customTags %}
  {% if product.tags contains string %}
    <div>{{ section.settings.tag-text }}</div>
  {% endif %}
{% endfor %}

<pre>{{ customTags | json }}</pre>

{% schema %}
{
  "name": "Product Tag Msg",
  "settings": [
    {
      "type": "textarea",
      "id": "tag-name",
      "label": "Enter Tag Name"
    },
        {
      "type": "text",
      "id": "tag-text",
      "label": "Custom Msg when tag is present"
    }
  ], 

 "presets" : [
      {
        "category": "custom", 
        "name": "Product Tag Message"
      }
    ]

  
}

{% endschema %}


